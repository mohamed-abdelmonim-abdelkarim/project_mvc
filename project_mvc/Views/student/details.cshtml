@model student
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Display Student</title>
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f7f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            max-width: 500px;
            margin: 40px auto;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #6c757d;
            color: white;
            font-size: 20px;
            font-weight: bold;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            text-align: center;
            padding: 15px;
        }

        .card-body {
            padding: 20px;
        }

        .info-label {
            font-weight: 600;
            color: #555;
        }

        .info-value {
            color: #333;
        }
    </style>
</head>
<body>
    <div class="card">
        <div class="card-header">
            Student Details
        </div>
        <div class="card-body">
            <p><span class="info-label">ID:</span> <span class="info-value">@Model.Id</span></p>
            <p><span class="info-label">Name:</span> <span class="info-value">@Model.Name</span></p>
            <p><span class="info-label">Address:</span> <span class="info-value">@Model.address</span></p>
            <p><span class="info-label">Department ID:</span> <span class="info-value">@Model.dept_id</span></p>
            <p><span class="info-label">Email:</span> <span class="info-value">@Model.email</span></p>
        </div>
    </div>

    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

