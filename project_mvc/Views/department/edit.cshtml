@model department
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Edit Department</title>
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f7f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .form-label {
            font-weight: 500;
            margin-bottom: 5px;
        }

        .form-control {
            border-radius: 6px;
            margin-bottom: 15px;
            padding: 10px;
        }

        .btn-primary {
            width: 100%;
            padding: 12px;
            border-radius: 6px;
            font-weight: bold;
            background-color: #007bff;
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .form-header {
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px;
            font-weight: 600;
            color: #333;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="form-header">Edit Department</div>
        <form asp-action="edit" asp-controller="department" method="post">
            <div class="mb-3">
                <label asp-for="dept_Id" class="form-label">Department ID</label>
                <input asp-for="dept_Id" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="dept_Name" class="form-label">Department Name</label>
                <input asp-for="dept_Name" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
    </div>

    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
